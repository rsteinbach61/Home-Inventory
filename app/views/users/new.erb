
<div id="flash">
<% if flash.has?(:login_error) %>
  <h3 style="color:red;"><%= flash[:login_error] %></h3>
<% end %>
</div>

<h3>Sign Up</h3>
<form action="/signup" method="POST">
<p><input type="email" name="email" placeholder="email:" required="true"></p>
<p><input type="password" name="password" placeholder="Password:" required="true"></p>
<p><input type="text" name="name" placeholder="name:" required="true"></p>
<input type="submit" value="Sign Up">
</form>
